# voe3
# tmux-based e3 runner
#
# usage: bin/voe3
#

tmux -f etc/voe3t-tmux.conf \
     new-session  -svoe3 -nvoe3 'bin/logtails -n100 -f var/log/oe3.log'\; \
     split-window -bv -l11      'bin/estimwatch'\; \
     split-window -bh -l81      'bash --rcfile etc/voe3t-bashrc'
